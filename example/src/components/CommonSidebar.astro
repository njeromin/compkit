---
import SidebarItem from "./SidebarItem.astro";
import "fs";

// fs.readdirSync("./src/pages/components/").forEach((file) => {});
---

<div id="sidebar">
	<h3>Paths</h3>
	<SidebarItem name="Home" path="/" />
	<SidebarItem name="Product" path="/product" />

	<h3>Components</h3>

	<SidebarItem name="Input" path="/components/input" />
	<SidebarItem name="Button" path="/components/button" />
	<SidebarItem name="Card" path="/components/card" />
	<SidebarItem name="Dialog" path="/components/dialog" />
	<SidebarItem name="Select" path="/components/select" />
	<SidebarItem name="Toggle Switch" path="/components/toggleswitch" />
</div>

<style lang="scss">
	@use "$/style/devices";

	#sidebar {
		background: var(--bg-ev0);
		border-right: 1px solid var(--accent);
		width: 15%;
		padding: 0.5em;

		& > h3 {
			font-size: 1.1rem;
			margin-bottom: 0.25em;
		}

		@include devices.is-phone {
			position: fixed;
			z-index: 200;
			width: 100%;
			height: 100%;
			padding: 0.25em;
			border-right: none;
			display: none;

			&.mobile-visible {
				display: block;
			}

			& > h3 {
				margin-left: 0.25em;
			}
		}
	}
</style>
